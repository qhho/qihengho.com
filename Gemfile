source 'https://rubygems.org'

# Specify a Jekyll version compatible with academicpages and jekyll-scholar
# You might start with a recent Jekyll 4.x version.
gem 'jekyll', '~> 4.3'

# Core Jekyll plugins (already in your original Gemfile)
